/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/atacseq -profile test
 */

params {
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h

  // Input data
  design = 'https://github.com/nf-core/test-datasets/raw/chipseq/design.csv'
  singleEnd = false

  // Genome references
  fasta = 'https://github.com/nf-core/test-datasets/raw/chipseq/reference/genome.fa'
  gtf = 'https://github.com/nf-core/test-datasets/raw/chipseq/reference/genome.gtf'
}
